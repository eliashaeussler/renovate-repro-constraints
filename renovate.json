{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "constraints": {
        "php": "8.1.*"
    },
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchFileNames": [
                "foo/**"
            ],
            "constraints": {
                "php": "8.3.*"
            }
        }
    ]
}
